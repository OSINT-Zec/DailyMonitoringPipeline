# Copy this file to `.env` and fill in real values.
# NOTE: If your DB password contains @, :, / or %, URL-encode it in POSTGRES_URL.

# --- Database ---
POSTGRES_URL=postgresql://USER:PASSWORD@127.0.0.1:5432/osint

# --- Optional object storage (unused unless you wire up blob storage) ---
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=osint-raw
S3_ACCESS_KEY=CHANGE_ME
S3_SECRET_KEY=CHANGE_ME

# --- LLM summaries ---
OPENAI_API_KEY=YOUR_OPENAI_API_KEY
# Optional: override the model used for summaries (default: gpt-4o-mini)
OPENAI_SUMMARY_MODEL=gpt-4o-mini

# --- Telegram ingestion (optional; remove if unused) ---
TELEGRAM_API_ID=YOUR_TELEGRAM_API_ID
TELEGRAM_API_HASH=YOUR_TELEGRAM_API_HASH
TELEGRAM_SESSION_NAME=osint_telegram_session
TELEGRAM_BACKFILL_DAYS=2

# --- Pipeline toggles ---
# Use lightweight TF-IDF clustering (1=true, 0=false). Leave at 1 unless youâ€™ve set up embeddings.
LIGHT_CLUSTER=1

